rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is scorekeeper
    function isScorekeeper() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'scorekeeper';
    }
    
    // Helper function to check if user is admin or scorekeeper
    function isAdminOrScorekeeper() {
      return isAdmin() || isScorekeeper();
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Tournaments collection
    match /tournaments/{tournamentId} {
      // Public read access for all tournaments
      allow read: if true;
      
      // Only admins can create, update, or delete tournaments
      allow create, update, delete: if isAdmin();
    }
    
    // Games collection
    match /games/{gameId} {
      // Public read access for all games
      allow read: if true;
      
      // Admins can create, update, or delete games
      allow create, update, delete: if isAdmin();
      
      // Scorekeepers can update game scores and status
      allow update: if isScorekeeper() && 
        // Only allow updating specific fields
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['scoreA', 'scoreB', 'status', 'updatedAt']);
    }
    
    // Divisions collection
    match /divisions/{divisionId} {
      // Public read access for all divisions
      allow read: if true;
      
      // Only admins can create, update, or delete divisions
      allow create, update, delete: if isAdmin();
    }
    
    // Locations collection
    match /locations/{locationId} {
      // Public read access for all locations
      allow read: if true;
      
      // Only admins can create, update, or delete locations
      allow create, update, delete: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if isOwner(userId);
      
      // Admins can read all user profiles
      allow read: if isAdmin();
      
      // Admins can update user roles and other admin-specific fields
      allow update: if isAdmin() && 
        // Ensure admins can only update specific fields
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['role', 'updatedAt']);
      
      // Allow user creation during registration (handled by Firebase Auth triggers)
      allow create: if isOwner(userId) && 
        // Ensure new users can only set basic profile fields
        request.resource.data.keys().hasOnly([
          'email', 'displayName', 'role', 'followingTeams', 
          'followingGames', 'notificationsEnabled', 'fcmToken',
          'createdAt', 'updatedAt', 'lastActive'
        ]) &&
        // Ensure new users start with 'user' role
        request.resource.data.role == 'user';
    }
    
    // Additional security rules for specific operations
    
    // Prevent users from escalating their own role
    match /users/{userId} {
      allow update: if isOwner(userId) && 
        // User can update their profile but not their role
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
    }
    
    // Ensure data integrity for following operations
    match /users/{userId} {
      allow update: if isOwner(userId) && 
        // Validate followingTeams array contains only strings
        (request.resource.data.followingTeams is list &&
         request.resource.data.followingTeams.size() <= 100) &&
        // Validate followingGames array contains only strings  
        (request.resource.data.followingGames is list &&
         request.resource.data.followingGames.size() <= 100);
    }
    
    // Deny all other operations by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}